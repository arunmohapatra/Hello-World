import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class MaxJoltageCalculator {

    public static void main(String[] args) {
        String filePath = "input.txt"; // change to your actual file

        long total = 0;

        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
            String line;
            while ((line = br.readLine()) != null) {
                int value = maxTwoDigitInOrder(line);
                total += value;
                System.out.println(line + " -> " + value);
            }
            System.out.println("Total Output Joltage = " + total);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // Find the largest 2-digit number formed by digits in order (i < j)
    private static int maxTwoDigitInOrder(String s) {
        int max = 0;
        int n = s.length();

        for (int i = 0; i < n - 1; i++) {
            int first = s.charAt(i) - '0';

            for (int j = i + 1; j < n; j++) {
                int second = s.charAt(j) - '0';
                int value = first * 10 + second;

                if (value > max) {
                    max = value;
                }
            }
        }
        return max;
    }
}


============

private static final int K = 12;  // we must select exactly 12 digits

    public static void main(String[] args) {
        String filePath = "input.txt";  // change as needed

        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
            String line;
            long total = 0;

            while ((line = br.readLine()) != null) {
                String result = maxSubsequenceOfLengthK(line, K);
                System.out.println(line + " -> " + result);
                total += Long.parseLong(result);
            }

            System.out.println("Total Output Joltage = " + total);

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // Returns largest subsequence of exact length K, preserving order
    private static String maxSubsequenceOfLengthK(String s, int k) {
        int n = s.length();
        StringBuilder result = new StringBuilder();

        int start = 0;  // where we can start searching

        for (int remaining = k; remaining > 0; remaining--) {

            // We must leave enough characters after choosing the next one
            int end = n - remaining;

            // Pick max digit from s[start...end]
            char maxDigit = '0';
            int maxIndex = start;

            for (int i = start; i <= end; i++) {
                if (s.charAt(i) > maxDigit) {
                    maxDigit = s.charAt(i);
                    maxIndex = i;

                    // Optimization: If we find '9', can't get bigger
                    if (maxDigit == '9') break;
                }
            }

            result.append(maxDigit);
            start = maxIndex + 1;
        }

        return result.toString();
    }
